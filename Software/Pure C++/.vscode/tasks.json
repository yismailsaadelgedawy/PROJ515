{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C++: g++.exe build active file",  // name of prelaunch task referenced in "launch.json"
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "*.cpp",    // was ${file}. Now compiles and links all cpp files
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
